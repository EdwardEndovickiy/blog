<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= image_tag @article.image.url(:thumb)  if @article.image? %>
      <p>
        <strong>Title:</strong>
        <%= @article.title %>
      </p>
      <p>
        <strong>Text:</strong>
        <%= @article.text %>
      </p>
      <%= link_to 'Edit', edit_article_path(@article) %>
      <%= link_to 'Back', articles_path %>
    </div>
    <div class="col-md-12">
      <%= render 'disqus' %>
    </div>
  </div>
</div>
