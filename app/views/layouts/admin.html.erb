<!DOCTYPE html>
<html>
  <head>
    <title>Blog2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <script>
        alert('<%= notice %>');
      </script>
    <% end %>

    <% if flash[:alert] %>
      <script>
        alert('<%= alert %>');
      </script>
    <% end %>

    <header>

      <nav class="header navbar-admin">
        <span class="label">Admin Panel</span>
        <% if user_signed_in? %>
          <%= link_to "Exit", destroy_user_session_path, method: :delete , class: 'nav-link'%>
        <% else %>
           <%= link_to "Sign in", new_user_session_path, class: 'nav-link' %>
          <%= link_to "Registration", new_user_registration_path, class: 'nav-link' %>
        <% end %>
      </nav>

    </header>

    <main>

      <div class="body">
        <div class="container">
        </div>
      </div>

      <div class="container">
        <div class="col-12">
          <div class="container body-yield">
            <%= yield %>
          </div>
        </div>
      </div>

    </main>

    <footer>
      Edward Endovickiy
    </footer>
  </body>
</html>
