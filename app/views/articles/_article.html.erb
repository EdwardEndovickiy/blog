<p>
  <strong>Title:</strong>
  <%= article.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= article.text %>
</p>
<p>
  <%= image_tag article.image.url(:thumb)  if article.image? %>
</p>
<section>
  <%= raw article.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-danger' }.join(' ') %>
</section>
<%= link_to 'Show', article_path(article) %>
<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Edit', edit_admin_article_path(article) %>
  <%= link_to 'Delete', admin_article_path(article),
            method: :delete,
            data: {confirm: 'Are you sure?' } %>
<% end %>
<hr>

