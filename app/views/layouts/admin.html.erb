<!DOCTYPE html>
<html>
  <head>
    <title>Blog2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="body"><div class="container"></div></div>
          <div class="col-12">
            <nav class="header navbar-admin">
              <span class="label">Admin Panel</span>
              <% if user_signed_in? %>
                <%= link_to "Exit", destroy_user_session_path, method: :delete , class: 'nav-link'%>
              <% else %>
                 <%= link_to "Sign in", new_user_session_path, class: 'nav-link' %>
                <%= link_to "Registration", new_user_registration_path, class: 'nav-link' %>
              <% end %>
            </nav>
            <div>
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
            </div>

            <div class="container">
             <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
