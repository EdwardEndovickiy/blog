<div class="show-article">
  <%= image_tag @article.image.url(:large), class: "article-img-show" if @article.image? %>
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>
  <p>
    <strong>Text:</strong>
    <%= @article.text %>
  </p>
  <% if user_signed_in? %>
    <%= link_to 'Edit', edit_admin_article_path(@article) %>
  <% end %>
  <%= link_to 'Back', articles_path %>
  <%= render 'disqus' %>
</div>
