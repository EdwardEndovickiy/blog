<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 register-form">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label input-login">
          <%= f.label :email, class: "mdl-textfield__label"  %><br />
          <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
        </div>
        <br>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label input-login">
          <%= f.label :password, class: "mdl-textfield__label"  %><br />
          <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="checkbox-2">
            <%= f.check_box :remember_me, id: "checkbox-2", class: "mdl-checkbox__input" %>
            <span class="mdl-checkbox__label">Remember me</span>
          </label>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
