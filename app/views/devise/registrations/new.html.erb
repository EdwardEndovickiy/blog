<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 register-form">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label input-login">
          <%= f.label :email, class: "mdl-textfield__label"  %>
          <%= f.email_field :email, autofocus: true, class: "mdl-textfield__input" %>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label input-login">
          <%= f.label :password, class: "mdl-textfield__label"  %>
          <% if @minimum_password_length %>
            <em class="mdl-textfield__label">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "mdl-button mdl-js-button mdl-button--raised" %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
